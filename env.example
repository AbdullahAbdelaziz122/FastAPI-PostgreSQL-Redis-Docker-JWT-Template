# ============================================
# DATABASE CONFIGURATION
# ============================================

# PostgreSQL Database URL
# Format: postgresql+asyncpg://username:password@host:port/database
# Example for Docker: postgresql+asyncpg://trendsight:trendsight@db:5432/trendsight_db
# Example for local: postgresql+asyncpg://postgres:password@localhost:5432/trendsight_db
DATABASE_URL=postgresql+asyncpg://username:password@localhost:5432/dbname

# Alternative sync driver (if needed for some operations)
# DATABASE_URL_SYNC=postgresql://username:password@localhost:5432/dbname


# ============================================
# REDIS CONFIGURATION
# ============================================

# Redis Host
REDIS_HOST=localhost

# Redis Port
REDIS_PORT=6379


# ============================================
# JWT AUTHENTICATION
# ============================================

# Secret key for JWT token generation
# Generate a secure key with: openssl rand -hex 32
# NEVER commit this value to git - generate a unique one for each environment
SECRET_KEY=your-secret-key-here-generate-with-openssl-rand-hex-32

# JWT Algorithm
ALGORITHM=HS256

# Access token expiration time in minutes
ACCESS_TOKEN_EXPIRE_MINUTES=60

# Refresh token expiration (if implemented)
# REFRESH_TOKEN_EXPIRE_DAYS=7


# ============================================
# APPLICATION SETTINGS
# ============================================

# Application Name
APP_NAME=TrendSight Analytics

# Debug Mode (set to False in production)
DEBUG=True

# API Version
API_VERSION=v1

# API Prefix (optional)
# API_PREFIX=/api/v1

# Server Host
HOST=0.0.0.0

# Server Port
PORT=8000


# ============================================
# CORS CONFIGURATION
# ============================================

# Allowed Origins for CORS
# Development: Use ["*"] for all origins
# Production: Specify exact origins like ["https://yourdomain.com", "https://www.yourdomain.com"]
ALLOWED_ORIGINS=["*"]

# Allowed Methods
# ALLOWED_METHODS=["GET", "POST", "PUT", "DELETE", "PATCH"]

# Allowed Headers
# ALLOWED_HEADERS=["*"]

# Allow Credentials
# ALLOW_CREDENTIALS=True


# ============================================
# ENVIRONMENT
# ============================================

# Environment (development, staging, production)
ENVIRONMENT=development


# ============================================
# LOGGING
# ============================================

# Log Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log Format
# LOG_FORMAT=json


# ============================================
# RATE LIMITING (if implemented)
# ============================================

# RATE_LIMIT_ENABLED=True
# RATE_LIMIT_REQUESTS=100
# RATE_LIMIT_PERIOD=60


# ============================================
# EMAIL CONFIGURATION (if implemented)
# ============================================

# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# SMTP_FROM_EMAIL=noreply@trendsight.com
# SMTP_FROM_NAME=TrendSight Analytics


# ============================================
# FILE UPLOAD (if implemented)
# ============================================

# MAX_UPLOAD_SIZE=10485760  # 10MB in bytes
# ALLOWED_UPLOAD_EXTENSIONS=[".jpg", ".jpeg", ".png", ".pdf"]


# ============================================
# EXTERNAL SERVICES (if needed)
# ============================================

# AWS Configuration
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_REGION=us-east-1
# S3_BUCKET_NAME=trendsight-uploads

# Other service APIs
# STRIPE_API_KEY=your-stripe-key
# SENDGRID_API_KEY=your-sendgrid-key


# ============================================
# TESTING (for test environment)
# ============================================

# TEST_DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/trendsight_test
# TEST_REDIS_HOST=localhost
# TEST_REDIS_PORT=6380


# ============================================
# DOCKER SPECIFIC (when using Docker Compose)
# ============================================

# PostgreSQL (matches docker-compose.yml service name)
# POSTGRES_USER=trendsight
# POSTGRES_PASSWORD=trendsight
# POSTGRES_DB=trendsight_db
# POSTGRES_HOST=db
# POSTGRES_PORT=5432

# Redis (matches docker-compose.yml service name)
# REDIS_HOST=redis
# REDIS_PORT=6379
